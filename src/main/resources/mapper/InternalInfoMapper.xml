<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.backGroundLocate.mapper.InternalInfoMapper">
    <resultMap id="BaseResultMap" type="com.backGroundLocate.entity.InternalInfo">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="internal_name" jdbcType="VARCHAR" property="internalName" />
        <result column="dept_id" jdbcType="INTEGER" property="deptId" />
        <result column="dept_name" jdbcType="VARCHAR" property="deptName" />
    </resultMap>

    <sql id="Base_Column_List">
    id,internal_name,dept_id,dept_name
    </sql>

    <select id="selectInternalListByDeptId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from t_internal where dept_id = #{deptId,jdbcType=INTEGER}
    </select>
</mapper>