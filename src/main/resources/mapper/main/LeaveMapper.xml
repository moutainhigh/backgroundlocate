<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.backGroundLocate.mapper.main.LeaveMapper">
    <resultMap id="BaseResultMap" type="com.backGroundLocate.entity.Leave">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="user_id" jdbcType="INTEGER" property="userId" />
        <result column="user_name" jdbcType="VARCHAR" property="userName" />
        <result column="type" jdbcType="INTEGER" property="type" />
        <result column="start_time" jdbcType="VARCHAR" property="startTime" />
        <result column="end_time" jdbcType="VARCHAR" property="endTime" />
        <result column="timestamp" jdbcType="INTEGER" property="timestamp" />
        <result column="approver" jdbcType="VARCHAR" property="approver" />
        <result column="approver_state" jdbcType="INTEGER" property="approverState" />
        <result column="approver_time" jdbcType="INTEGER" property="approverTime" />
        <result column="remark" jdbcType="VARCHAR" property="remark" />
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,user_name,start_time,end_time,timestamp,approver,approver_state,approver_state,approver_time,remark
    </sql>

    <insert id="saveLeave" parameterType="com.backGroundLocate.entity.Leave" >
        insert into t_leave(
                    user_id,
                    user_name,
                    type,
                    start_time,
                    end_time,
                    timestamp,
                    approver,
                    approver_state,
                    approver_time,
                    remark)
        values(#{userId,jdbcType=INTEGER},
               #{userName,jdbcType=VARCHAR},
               #{type,jdbcType=INTEGER},
               #{startTime,jdbcType=INTEGER},
               #{endTime,jdbcType=INTEGER},
               #{timestamp,jdbcType=INTEGER},
               #{approver,jdbcType=INTEGER},
               #{approverState,jdbcType=VARCHAR},
               #{approverTime,jdbcType=INTEGER},
               #{remark,jdbcType=VARCHAR})
    </insert>

    <update id="updateLeave" parameterType="com.backGroundLocate.entity.Leave">
        update t_attendance
        <trim prefix="set" suffixOverrides=",">
            <if test="approver!=null">approver=#{approver,jdbcType=VARCHAR},</if>
            <if test="approverState!=null">approver_state=#{approverState,jdbcType=INTEGER},</if>
            <if test="approverTime!=null">approver_time=#{approverTime,jdbcType=INTEGER},</if>
        </trim>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <select id="selectLeave" resultMap="BaseResultMap" parameterType="map" >
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        t_leave
        WHERE
        1 = 1
        <if test="id!=null">
            AND id = #{id,jdbcType=INTEGER}
        </if >
        <if test="userId!=null">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if >
        <if test="userName!=null">
            AND user_name = #{userName,jdbcType=INTEGER}
        </if >
        <if test="startTime!=null">
            AND timestamp &gt;= #{startTime,jdbcType=INTEGER}
        </if >
        <if test="endTime!=null">
            AND timestamp &lt;= #{endTime,jdbcType=INTEGER}
        </if >
        ORDER BY timestamp desc
    </select>

    <select id="selectLeaveList" resultMap="BaseResultMap" parameterType="map" >
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        t_leave
        WHERE
        1 = 1
        <if test="userId!=null">
            AND user_id = #{userId,jdbcType=INTEGER}
        </if >
        <if test="userName!=null">
            AND user_name = #{userName,jdbcType=INTEGER}
        </if >
        <if test="startTime!=null">
            AND timestamp &gt;= #{startTime,jdbcType=INTEGER}
        </if >
        <if test="endTime!=null">
            AND timestamp &lt;= #{endTime,jdbcType=INTEGER}
        </if >
        ORDER BY timestamp desc
    </select>

</mapper>